@model PlantCareFramework.Models.Plant
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Delete"];
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["Plant"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Plant name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Weekly Water Quantity"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WaterQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Last Watering (date)"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Placing"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Place.Id)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Light Intensity"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Light.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@Localizer["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </form>
</div>
